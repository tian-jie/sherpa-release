@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" crossorigin="anonymous" />

    <script src="/js/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/css/style.css" crossorigin="anonymous">

    <title>实时语音识别系统</title>
</head>


<body>
    <div id="nav"></div>
    <div class="mb-3">
        <label for="results" class="form-label">识别结果</label>
        <div class="form-control rec-text-area" id="results">
        </div>
    </div>

    <button class="record-button" id="record-button">
        <img id="record-image" style="width:30px" src="/pic/chat_record.png">
        @*        <div id="record-image" style="width:52px;text-align: center;">
        <span style="color: #fff; font-weight:700;">REC</span>
        </div>*@
        <canvas id="canvas" style="display: none;width: 50px;height: 30px;"></canvas>
    </button>

    <div id="current-recognize" style="fill: #aaa;border-radius: 10px"></div>

    <div class="audio-wrapper" id="audio-section">
        <div class="audio-left"><img id="audioPlayer" src="/pic/audioplay.png"></div>
        <div class="audio-right">
            <p style="max-width: 536px;">会议录音</p>
            <div class="audio-time"><span class="audio-length-current" id="audioCurTime">00:00</span><span> / </span><span class="audio-length-current" id="audio-duration">00:00</span></div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/js/popper.min.js" crossorigin="anonymous">
    </script>

    <script src="/js/bootstrap.min.js" crossorigin="anonymous">
    </script>
    <script src="https://cdn.bootcdn.net/ajax/libs/lamejs/1.2.1/lame.all.min.js"></script>
    <script src="/js/create_record.js"> </script>
</body>

</html>